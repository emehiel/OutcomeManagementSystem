@page
@model OutcomeManagementSystem.Pages.StudentOutcomes.DetailsModel

@{
    ViewData["Title"] = "Student Outcome Details";
}

<h1>Student Outcome Details</h1>

<div>
    <h4>ABET Student Outcome @Model.StudentOutcome.SONumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentOutcome.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentOutcome.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentOutcome.ShortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentOutcome.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentOutcome.SO_KPIs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StudentOutcome.SO_KPIs.First().KPINumber)</th>
                    <th>@Html.DisplayNameFor(model => model.StudentOutcome.SO_KPIs.First().Description)</th>
                </tr>
                @foreach (var item in Model.StudentOutcome.SO_KPIs)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.KPINumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.StudentOutcome.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
