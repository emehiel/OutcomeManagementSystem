@page
@model OutcomeManagementSystem.Pages.CourseCoordinators.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course Coordinator</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCoordinator.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCoordinator.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCoordinator.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCoordinator.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCoordinator.Courses)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CourseCoordinator.Courses.First().Department)</th>
                    <th>@Html.DisplayNameFor(model => model.CourseCoordinator.Courses.First().Number)</th>
                </tr>
                @foreach (var course in Model.CourseCoordinator.Courses)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => course.Department)</td>
                        <td>@Html.DisplayFor(modelItem => course.Number)</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CourseCoordinator.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
