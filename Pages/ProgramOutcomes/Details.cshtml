@page
@model OutcomeManagementSystem.Pages.ProgramOutcomes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Program Outcome @Model.ProgramOutcome.PONumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProgramOutcome.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProgramOutcome.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProgramOutcome.Concentration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProgramOutcome.Concentration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProgramOutcome.CLOs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProgramOutcome.CLOs.First().Course.Department)</th>
                    <th>@Html.DisplayNameFor(model => model.ProgramOutcome.CLOs.First().Course.Number)</th>
                    <th>@Html.DisplayNameFor(model => model.ProgramOutcome.CLOs.First().Description)</th>
                </tr>
                @foreach (var item in Model.ProgramOutcome.CLOs)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Course.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course.Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ProgramOutcome.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
