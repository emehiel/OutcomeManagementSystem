@page
@model OutcomeManagementSystem.Pages.Courses.CreateModel
@using OutcomeManagementSystem.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course.Department" class="control-label"></label>
                <input asp-for="Course.Department" class="form-control" />
                <span asp-validation-for="Course.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Number" class="control-label"></label>
                <input asp-for="Course.Number" class="form-control" />
                <span asp-validation-for="Course.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Title" class="control-label"></label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Units" class="control-label"></label>
                <input asp-for="Course.Units" class="form-control" />
                <span asp-validation-for="Course.Units" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Description" class="control-label"></label>
                <input asp-for="Course.Description" class="form-control" />
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Concentration" class="control-label"></label>
                <input asp-for="Course.Concentration" class="form-control" />
                <span asp-validation-for="Course.Concentration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Quarter" class="control-label"></label>
                <select asp-for="Course.Quarter" class="form-control" asp-items="Html.GetEnumSelectList<QuarterType>()"></select>
                <span asp-validation-for="Course.Quarter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Year" class="control-label"></label>
                <select asp-for="Course.Year" class="form-control" asp-items="Html.GetEnumSelectList<YearType>()"></select>
                <span asp-validation-for="Course.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
