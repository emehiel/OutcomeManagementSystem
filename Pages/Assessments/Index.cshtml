@page
@model OutcomeManagementSystem.Pages.Assessments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js@3.2.1/dist/chart.js"></script>

<h1>Index</h1>

<p>
    The chart goes here:
</p>
<div class="container-fluid bg-light p-3 rounded-3">
    <div class="d-grid gap-3">
        <div class="row">
            <div class="col-xl-3">
                @foreach (var ar in Model.MasteryResults)
                {
                <card>
                    <canvas id="outComeChart" width="100" height="100"></canvas>
                </card>
                }
            </div>
        </div>
    </div>
</div>


<script>
    const data = {
        labels: [
            'Exceeds Mastery',
            'Mastery',
            'Near Mastery',
            'Below Mastery'
        ],
        datasets: [{
            label: 'Outcome Assessment Data',
            data: @Model.MasteryResults[0],
            backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)',
                'rgb(255, 205, 86)',
                'rgb(127, 127, 127)'
            ],
            hoverOffset: 4
        }]
    };

    const config = {
        type: 'doughnut',
        data: data,
        options: {
            responsive: true,
            tooltips: {
                callbacks: {
                    label: function (tooltipItem, data) {
                        var dataset = data.datasets[tooltipItem.datasetIndex];
                        var currentValue = dataset.data[tooltipItem.index];
                        return currentValue + "%";
                        //return percentage + "%";
                    }
                }
            }
        }
    };

    var outComeChart = new Chart(
        document.getElementById('outComeChart'),
        config
    );

