@model OutcomeManagementSystem.Pages.CLOs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course Learning Outcome Information for @Model.CLO.Course.Department @Model.CLO.Course.Number </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CLO.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CLO.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CLO.MasteryLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CLO.MasteryLevel)
        </dd>
        <dt class="col-sm-2">
            CLO Code
        </dt>
        <dd class="col-sm-10">
            @Model.CLO.CLOCode
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CLO.SO_KPI)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CLO.SO_KPI.KPINumber)</th>
                    <th>@Html.DisplayNameFor(model => model.CLO.SO_KPI.Description)</th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.CLO.SO_KPI.KPINumber)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CLO.SO_KPI.Description)
                    </td>
                </tr>
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CLO.ProgramOutcome)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CLO.ProgramOutcome.PONumber)</th>
                    <th>@Html.DisplayNameFor(model => model.CLO.ProgramOutcome.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.CLO.ProgramOutcome.Concentration)</th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.CLO.ProgramOutcome.PONumber)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CLO.ProgramOutcome.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CLO.ProgramOutcome.Concentration)
                    </td>
